{{template "base" .}}

{{define "title"}}Create a new Snippet{{end}}

{{define "body"}}
<form action="/snippet/create" method="post">
    <div>
        <label>Title: </label>
        <input type="text" name="title">
    </div>
    <div>
        <label>Content: </label>
        <textarea name="content"></textarea>
    </div>
    <div>
        <label>Delete in: </label>
        <input type="radio" name="expires" value="365" checked>One Year</input>
        <input type="radio" name="expires" value="7">One Week</input>
        <input type="radio" name="expires" value="1">One Day</input>
    </div>
    <div>
        <input type="submit" value="Publish Submit">
    </div>
</form>

{{end}}